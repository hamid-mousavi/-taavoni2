@model List<IdentityUser> // فرض بر این است که لیست کاربرها را دارید
@using Microsoft.AspNetCore.Identity;

<h2>اختصاص نقش Admin به کاربر</h2>

<form asp-controller="Roles" asp-action="AssignAdminRole" method="post">
    <select name="userId">
        @foreach (var user in Model)
        {
            <option value="@user.Id">@user.UserName</option>
        }
    </select>
    <button type="submit" class="btn btn-primary">اختصاص نقش Admin</button>
</form>
