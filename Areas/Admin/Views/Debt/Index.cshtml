@model IEnumerable<DebtDetailDTO>
@using NonFactors.Mvc.Grid
@using Taavoni.DTOs
<h2>جزئیات بدهی کاربران</h2>
<form asp-action="ApplyDailyPenalty" method="post">
    <button type="submit" class="btn btn-warning">اعمال جریمه روزانه</button>
</form>
<div class="">
  <a asp-area="Admin" asp-controller="Debt" asp-action="Create"  class="btn btn-primary">اضافه کردن</a>

</div>

<br>
@(Html
    .Grid(Model)
    .Build(columns =>
    {
       // columns.Add(model => model.Id).Titled("Name");
        columns.Add(model => model.Name).Titled("نام و نام خانوادگی");
        columns.Add(model => model.Guard).Titled("نگهبانی");
        columns.Add(model => model.DueDate).Titled("تاریخ سررسید");
        columns.Add(model => model.PenaltyRate.ToString()).Titled("درصد جریمه");
        columns.Add(model => model.RemainingAmount.ToString()).Titled("مبلغ باقیمانده");
        
        columns.Add(model => model.StartDate).Titled("از تاریخ").Formatted("{0:d}");
        columns.Add(model => model.EndDate).Titled("تا تاریخ").Formatted("{0:d}");
        columns.Add(model => model.IsPaid).Titled("وضعیت پرداخت");

      columns.Add(model => model.UserId).Titled("عملیات").RenderedAs(model => Html.ActionLink("Edit", "Edit", new {id = model.Id})).Encoded(false);
    
    })
    .Filterable(GridFilterCase.Lower)
    .Using(GridFilterMode.Header)
    .Empty("No data found")
    .Pageable(pager =>
    {
        pager.RowsPerPage = 10;
    })
    .Sortable()
)
