@using Taavoni.DTOs
@model IEnumerable<DebtDetailDTO>

<h2>Debt Details</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Guard</th>
            <th>Is Paid</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.StartDate.ToString("yyyy-MM-dd")</td>
                <td>@item.EndDate.ToString("yyyy-MM-dd")</td>
                <td>@item.Guard</td>
                <td>@item.IsPaid ? "Paid" : "Unpaid"</td>
                <td>
                    <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-primary">View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
